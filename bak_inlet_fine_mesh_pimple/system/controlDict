FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       startTime;

startTime       0.012;

stopAt          endTime;

endTime         0.015;

deltaT          2e-07;

writeControl    timeStep;

writeInterval   1000;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    fieldAverage1
    {
        type            fieldAverage;
        functionObjectLibs ( "libfieldFunctionObjects.so" );
        enabled         false;
        outputControl   outputTime;
        resetOnRestart  true;
        resetOnOutput   false;
        fields
        (
            U
            {
                mean on;
                prime2Mean on;
                base time;
            }
        );
    }

    surfaceSampling
    {
        type surfaces;

        // Where to load it from (if not already in solver)
        functionObjectLibs ("libsampling.so");
        enabled         false;
        outputControl   outputTime;

        surfaceFormat foamFile;

        // Fields to be sampled
        fields
        (
            U
        );

#include "sample.inc"

    }

}


